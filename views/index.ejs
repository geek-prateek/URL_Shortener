<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <style>
    .shrink{
      width: 150px;
      float: left;
    }
    .container {
      border-radius: 5px;
      border-left: 50px solid transparent;
      border-right: 50px solid transparent;
      border-bottom: 70px solid green;
    }
    .link {
      display: inline-block;
      width: 50vh;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }
  </style>
  <body>
    <nav class="navbar bg-primary bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="https://camo.githubusercontent.com/56ea24702a43a27f55794275849e38c16cd393e244a59297a71266b9b34e3e53/68747470733a2f2f617368616c6c656e64657369676e2e636f2e756b2f696d616765732f637573746f6d2f73686f72742d75726c2d6c6f676f2e706e67"
            alt="Logo"
            height="80"
            class="d-inline-block align-text-top"
          />
          
        </a>
      </div>
      
    </nav>
    
    <div class="container">
      <form action="/shortURLs" method="POST" class="my-4 form-inline">
        <div class="row">
          <div class="col-sm-8 mb-3 mb-sm-0">
            <label for="fullUrl" class="sr-only"><b style="font-size:larger;">Paste a long URL</b></label>
      

            <div class="col my-3">
              <input
                required
                placeholder="Example: https://google.com"
                type="url"
                name="fullUrl"
                id="fullUrl"
                class="form-control"
              />
            </div>
            
            <div class="col my-3">
              <button class="btn btn-success" type="submit">Shorten URL</button>
            </div>
            
          </div>
          <div class="col-sm-4">
            <img src="https://media.tenor.com/7E3DN4g0ePsAAAAM/ant-man-shrinking.gif" alt="gif" class="shrink"
            >
          </div>
            
        </div>
      </form>
      
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Original URL</th>
            <th>Short URL</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td>
              <a class="link" href="<%= shortUrl.full %>"
                ><%= shortUrl.full %></a
              >
            </td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.count %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
